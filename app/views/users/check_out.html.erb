<h1> Review Shopping Cart </h1>

<table class="table">
	<thead>
		<tr>
			<th>Order Name</th>
		  <th>Quantity</th>
		  <th>Sub Total</th>
		</tr>
	</thead>

	<tbody>
		<% total = 0 %>
		<% @cart.cart_items.each do |cart_item|%>
		<% subtotal = cart_item.price * cart_item.quantity %>
		<% total += subtotal %>
		<tr>
			<td>
        <%= image_tag cart_item.food.picture.url(:thumb) %>
				<%= cart_item.food.try(:name) %></td>
			<td><%= cart_item.quantity %></td>
			<td><%= number_to_currency(subtotal, unit: "Rp.", format: "%u %n")  %></td>				
	</tr>
	</tbody>
<% end %>
</table>
<%= form_tag orders_path, :method => :post do %>
	<%= text_area_tag :comment, "Type your comments Here" %>
	<div class="btn btn-inverse">
		<h4> Total: <%= total %> </h4>
				<%= submit_tag "Approve?", class: "btn btn-info" %>
	</div>
	<% end %>